{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch appScaler",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/appScaler",
            "env": {},
            "args": ["--development"],
            "showLog": true,
            "trace": "verbose"
        },
        // {
        //     "name": "Launch appScaler (development)",
        //     "type": "go",
        //     "request": "launch",
        //     "mode": "debug",
        //     "program": "${workspaceFolder}/cmd/appScaler",
        //     "env": {},
        //     "args": ["--development"],
        //     "showLog": true
        // },
        {
            "name": "Debug Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-v"  // Optional: verbose output
            ]
        },
        {
            "name": "Debug Current Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-run",
                "${selectedText}"  // Runs specific test matching pattern
            ]
        },
        {
            "name": "Debug Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}"
        },
        {
            "name": "Debug Specific Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": ["-test.run", "TestMyFunction"]
        }
    ]
}
